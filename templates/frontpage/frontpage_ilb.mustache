{{!
@template theme_ilb/columns2

Admin time setting template.

Ilb 2 column layout template.

Context variables required for this template:
* sitename - The name of the site
* output - The core renderer for the page
* bodyattributes - attributes for the body tag as a string of html attributes
* sidepreblocks - HTML for the blocks
* hasblocks - true if there are blocks on this page
* navdraweropen - true if the nav drawer should be open on page load
* regionmainsettingsmenu - HTML for the region main settings menu
* hasregionmainsettingsmenu - There is a region main settings menu on this page.
}}

{{> theme_ilb/frontpage/head_frontpage}}

<body {{{ bodyattributes }}}>
    {{> theme_ilb/frontpage/header_institucional}}

    {{> theme_ilb/frontpage/menu_local}}

    <div class="page-content">
        <div class="content-header">
            <div class="header-title">
                <h1>Instituto Legislativo Brasileiro (ILB)</h1>
                <a class="painel-estudante" href="{{{moodle_url}}}/my">Painel do estudante</a>
            </div>
            <div class="container">
                <div id="toolbar">
                    <div id="portal-breadcrumbs" class="portal-breadcrumbs">
                        <ol class="Breadcrumbs">
                            <li id="breadcrumbs-you-are-here">
                                Você está aqui:
                            </li>
                            <li id="breadcrumbs-home">

                                <a href="https://www12.senado.leg.br/institucional">Página Inicial</a>

                            </li>
                            <li id="breadcrumbs-1">

                                <span id="breadcrumbs-current">Instituto Legislativo Brasileiro</span>

                            </li>
                        </ol>
                    </div>
                    <div id="portal-login" class="portal-login"><ins></ins><a href="logout">Sair</a></div>
                </div>
            </div>
        </div>

        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            {{#apenasumitem}}
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        {{#urlnoticia1}}
                        <a href="{{{ urlnoticia1 }}}" target="_blank">
                            <img src="{{{ urlimagem1 }}}" class="d-block w-100" alt="">
                        </a>
                        {{/urlnoticia1}}
                        {{^urlnoticia1}}
                        <img src="{{{ urlimagem1 }}}" class="d-block w-100" alt="">
                        {{/urlnoticia1}}

                        <div class="carousel-caption d-none d-md-block">
                            <p>{{{ descricao1 }}}<br /></p>
                        </div>
                    </div>
                </div>
            {{/apenasumitem}}
            {{^apenasumitem}}
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        {{#urlnoticia1}}
                        <a href="{{{ urlnoticia1 }}}" target="_blank">
                            <img src="{{{ urlimagem1 }}}" class="d-block w-100" alt="">
                        </a>
                        {{/urlnoticia1}}
                        {{^urlnoticia1}}
                        <img src="{{{ urlimagem1 }}}" class="d-block w-100" alt="">
                        {{/urlnoticia1}}

                        <div class="carousel-caption d-none d-md-block">
                            <p>{{{ descricao1 }}}<br /></p>
                        </div>
                    </div>

                    {{#itenscarrossel}}
                    {{> theme_ilb/frontpage/item }}
                    {{/itenscarrossel}}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            {{/apenasumitem}}
        </div>

        <div class="cursos">
            <div class="container-destaque">
                <div class="cursos-container">
                    <h2>Cursos em destaque</h2>
                    <div class="cursos-content">
                        <a href="{{{moodle_url}}}/course/view.php?id={{{curso_destaque1}}}" class="curso-item">
                            <img class="curso-image" src="{{{imagem_destaque1}}}" alt="">
                        </a>

                        <a href="{{{moodle_url}}}/course/view.php?id={{{curso_destaque2}}}" class="curso-item">
                            <img class="curso-image" src="{{{imagem_destaque2}}}" alt="">
                        </a>

                        <a href="{{{moodle_url}}}/course/view.php?id={{{curso_destaque3}}}" class="curso-item">
                            <img class="curso-image" src="{{{imagem_destaque3}}}" alt="">
                        </a>
                    </div>
                </div>

                <div class="divider"></div>

                <div class="validacao-certificados">
                    <h2>Validação<br />de certificados</h2>
                    <a href="{{{moodle_url}}}" class="qrcode-link">
                        <img src="{{{moodle_url}}}/theme/ilb/image/qrcode-icon.png" alt="" class="qrcode-icon">
                    </a>
                </div>
            </div>
            <a href="{{{moodle_url}}}/course/index.php?categoryid=3" class="ver-mais">Ver mais</a>
        </div>
    </div>

    <!--{{{ output.main_content }}}-->
    {{> theme_ilb/frontpage/footer_frontpage }}

    <!-- Libras -->
    <script src="{{{moodle_url}}}/theme/ilb/portal_senado/js/essencial.js"></script>
    <script src="{{{moodle_url}}}/theme/ilb/portal_senado/js/tema.js"></script>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>
{{#js}}
M.util.js_pending('theme_ilb/loader');
require(['theme_ilb/loader'], function() {
M.util.js_complete('theme_ilb/loader');
});

M.util.js_pending('theme_ilb/drawer');
require(['theme_ilb/drawer'], function(drawer) {
drawer.init();
M.util.js_complete('theme_ilb/drawer');
});
{{/js}}